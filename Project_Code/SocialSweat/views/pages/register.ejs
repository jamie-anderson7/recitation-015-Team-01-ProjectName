<%- include ('../partials/header') %>

<main>
    
  <div class="container">
    <!-- THE REST OF YOUR HTML CODE GOES HERE -->
    <div id="messageContainer" style="background-color: lightgray; margin-top: 10px; margin-bottom: 10px;">
      <% if(locals.message){%>
        <% if(locals.color = 'red') {%>
          <p style="color:red">
            <%= message %>
          </p>
        <% } else {%>
          <p style="color:green">
            <%= message %>
          </p>
        <% } %>
      <% } %>
    </div>
    <form action="/register" method="POST">

      <div class="form-group" style="margin-bottom: 15px; margin-top: 15px">
        <label for="username">USERNAME:</label>
        <input class="form-control" type="text" id="username" name="username" placeholder="Enter your Username"/>
      </div>

      <div class="form-group" style="margin-bottom: 20px">
        <label for="password">PASSWORD:</label>
        <input class="form-control" type="password" id="password" name="password" placeholder="Enter your Password"/>
      </div>

      <button class="btn btn-primary" type="submit" style="margin-bottom: 10px">register</button>
      <p>Already registered? <a href="\login">Login here!</a></p>

    </form>
  </div>
</main>

<%- include ('../partials/footer') %>